<h1>New Option</h1>

<%= form_for(@option) do |f| %>
    <% if @option.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>

          <ul>
            <% @option.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <h4>Question: <%= Question.find(@option.question_id).body %></h4>

    <br/>

    <div class="form form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form form-control" %>
    </div>

    <div class="form form-group">
      <%= f.label :true_or_false %>
      <%= f.select :true_or_false, options_for_select([["True", 1], ["False", 0]], selected: if @option.true_or_false == 1; 1 else 0 end), :class => "form form-control" %>
    </div>

    <div class="field">
      <%= f.hidden_field :question_id%>
    </div>

    <input class="btn btn-primary" name="commit" value="Submit" data-disable-with="Submit" type="submit">
    <%= link_to "Finish", signature_path(@option.question.signature_id), class: "btn btn-primary" %>

<% end %>

