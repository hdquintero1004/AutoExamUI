    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :true_or_false %>
    <%= f.text_field :true_or_false %>
  </div>

  <div class="field">
    <%= f.hidden_field :question_id%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
