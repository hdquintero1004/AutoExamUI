<%= form_for(teacher) do |f| %>
  <% if teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form form-group">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect{|u| [u.email, u.id]}, :class => "form form-control" %>
  </div>

  <div class="form form-group">
    <%= f.label :signature_id %>
    <%= f.select :signature_id, Signature.all.collect{|s| [s.name, s.id]}, :class => "form form-control" %>
  </div>

  <input class="btn btn-primary" name="commit" value="Submit" data-disable-with="Submit" type="submit">

<% end %>
