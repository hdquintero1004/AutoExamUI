<% @exam = Exam.find(params[:id])
   $json_master = JSON.load(@exam.json_master)
   labels = @exam.labels
   if labels.nil?
     labels = []
   else
     labels = labels.remove(' ').split(',')
   end
%>

<h1><%= @exam.title %></h1>
<h2><%= @exam.header %></h2>
<h3><%= Signature.find(@exam.signature_id).name %></h3>

<head></head>
<body>
  <br/>
  <h4>Labels:</h4>
  <ul class="nav nav-tabs">
    <% labels.each do |label| %>
      <li><a data-toggle="tab" aria-controls="<%= label %>" href="#<%= label %>"><%= label %></a></li>
    <% end %>
  </ul>

  <div class="tab-content">
    <% tab_count = 0 %>
    <% all_questions = Question.where(:signature_id => @exam.signature_id ) %>
    <% labels.each do |label| %>
      <div class="tab-pane" id="<%= label %>">
        <br/>
        <div class="form form-group">
          <label>How many questions:</label>
          <input id="<%=label%>minC" type="number" class="form form-control" placeholder="Minimum." onchange="change_key_master('<%=label+"-min"%>', '<%= label+"minC" %>')" value="<%= $json_master[label+"-min"] if not $json_master[label+"-min"].nil?%>">
          <br/>
          <input id="<%=label%>maxC" type="number" class="form form-control" placeholder="Maximum." onchange="change_key_master('<%=label+"-max"%>', '<%= label+"maxC" %>')" value="<%= $json_master[label+"-max"] if not $json_master[label+"-max"].nil?%>">
        </div>

        <% questions_filtered = []
           all_questions.each do |question|
             if not question.labels.remove(' ').split(',').find_index(label).nil?
                questions_filtered.append(question)
             end
           end
           # @questions = Question.where(:id => questions_filtered).paginate(:page => params['question_page'+tab_count.to_s], :per_page => 1)
           questions = questions_filtered
        %>
        <% # will_paginate @questions, :param_name => 'question_page'+tab_count.to_s %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th>Min Cost</th>
            <th>Max Cost</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% count = 0 %>
          <% questions.each do |question| %>
              <tr>
                <td><a data-toggle="tab" aria-controls="q<%= tab_count %><%= count %>" href="#q<%= tab_count %><%= count %>"><span class="glyphicon glyphicon-list"></span>Options</a></td>
                <td><%= question.title %></td>
                <td><%= question.body %></td>
                <td><input id="minC<%=question.id%>" onchange="change_key_master('<%=label+"-"+question.id.to_s+"-min"%>', '<%= "minC" + question.id.to_s %>')" type="number" value="<%= $json_master[label+"-"+question.id.to_s+"-min"] if not $json_master[label+"-"+question.id.to_s+"-min"].nil?%>"></td>
                <td><input id="maxC<%=question.id%>" onchange="change_key_master('<%=label+"-"+question.id.to_s+"-max"%>', '<%= "maxC" + question.id.to_s %>')" type="number" value="<%= $json_master[label+"-"+question.id.to_s+"-max"] if not $json_master[label+"-"+question.id.to_s+"-max"].nil?%>"></td>
              </tr>
              <% count += 1 %>
          <% end %>
          </tbody>
        </table>

        <div class="tab-content">
          <% count = 0 %>
          <% questions.each do |question| %>
              <div class="tab-pane" id="q<%= tab_count %><%= count %>">
                <p>Options for: "<%= question.body %>"</p>
                <table class="table table-responsive">
                  <thead>
                  <tr>
                    <th>Body</th>
                    <th>True or false</th>
                    <th>Checked</th>
                    <th>Unchecked</th>
                    <th colspan="3"></th>
                  </tr>
                  </thead>

                  <tbody>
                  <% options = Option.where(:question_id => question.id) %>
                  <% options.each do |option| %>
                      <tr>
                        <td><%= option.body %></td>
                        <td><%= option.true_or_false %></td>
                        <td><input id="c<%= option.id%>" type="number" onchange="change_key_master('<%=label+"-"+question.id.to_s+"-"+option.id.to_s+"-checked"%>', '<%= "c" + option.id.to_s %>')" value="<%= $json_master[label+"-"+question.id.to_s+"-"+option.id.to_s+"-checked"] if not $json_master[label+"-"+question.id.to_s+"-"+option.id.to_s+"-checked"].nil?%>"></td>
                        <td><input id="uc<%= option.id%>" type="number" onchange="change_key_master('<%=label+"-"+question.id.to_s+"-"+option.id.to_s+"-uncheck"%>', '<%= "uc" + option.id.to_s %>')" value="<%= $json_master[label+"-"+question.id.to_s+"-"+option.id.to_s+"-uncheck"] if not $json_master[label+"-"+question.id.to_s+"-"+option.id.to_s+"-uncheck"].nil?%>"></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
              <% count += 1 %>
          <% end %>
        </div>
        <% tab_count += 1 %>
      </div>
    <% end %>
  </div>

  <%= link_to 'Submit', {:controller => "exams", :action => "update_master"}, class: "btn btn-primary" %>
</body>

<script>
    function change_key_master(key, id){
        $.ajax({url: "<%= url_for(:action => 'update_json_master') %>", data: {key: key, value: $(id).context.activeElement.valueAsNumber}});
        return false;
    }
</script>