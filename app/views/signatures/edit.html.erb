<h1>Editing Labels</h1>
<h4>Signature: <%= @signature.name %></h4>

<%= form_for(@signature) do |f| %>
    <% if @signature.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@signature.errors.count, "error") %> prohibited this signature from being saved:</h2>

          <ul>
            <% @signature.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <br/>

    <div class="form form-group">
      <% if User.find(current_user.id).role_id == 1 %>
          <%= f.label :name %>
          <%= f.text_area :name, class: "form form-control" %>
      <% else %>
          <%= f.hidden_field :name %>
      <% end %>
    </div>

    <div class="form form-group">
      <%= f.label :labels %>
      <%= f.text_area :labels, class: "form form-control" %>
    </div>

    <input class="btn btn-primary" name="commit" value="Update Signature" data-disable-with="Update Signature" type="submit">

    <%= link_to 'Back', signature_path(@signature.id), class: "btn btn-primary" %>

<% end %>