<body>

  <p>Options for: "<%= @question.body %>"</p>

  <%= link_to "+ New Option", {:controller => "options", :action => "new", :question_id => @question.id}, class: "btn btn-primary" %>

  <table class="table table-responsive">
    <thead>
    <tr>
      <th>Body</th>
      <th>True or false</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @options = Option.where(:question_id => @question.id) %>
    <% @options.each do |option| %>
        <tr>
          <td><%= option.body %></td>
          <td><%= if option.true_or_false == 1; "True" else "False" end %></td>
          <td><%= link_to 'Show', option %></td>
          <td><%= link_to 'Edit', edit_option_path(option) %></td>
          <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</body>